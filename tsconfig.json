{
  "compilerOptions": {
    "target": "ESNEXT",
    "outDir": "dist",
    "rootDir": ".",
    "module": "commonjs",
    "moduleResolution": "node",
    "jsx": "react",
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,

    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "esModuleInterop": true,

    "composite": true
  },
  "exclude": ["node_modules", "dist"],
  "include": ["src/**.*"]
}
